<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:background="@drawable/vegowall"
    >


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="271dp"
        android:layout_height="122dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_welcome_screen" />

    <TextView
        android:id="@+id/signupTxt"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:focusable="true"
        android:text="new here? Sign Up"
        android:textAlignment="center"
        android:textColor="#626262"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/signinBtn"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:backgroundTint="#cf0545"
        android:gravity="center"
        android:text="sign_in"
        android:textColor="#ffff" />

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="236dp"
        android:background="#cccbcb"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="الإيميل"
        android:inputType="textEmailAddress"
        android:paddingBottom="7.5dp"
        android:paddingTop="7.5dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="269dp"
        android:text="أو"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <EditText
        android:id="@+id/passwordTxt"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="178dp"
        android:background="#cccbcb"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="كلمة المرور"
        android:inputType="textPassword"
        android:paddingBottom="7.5dp"
        android:paddingTop="7.5dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="302dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:background="@color/scifitBlue"
        android:text="تسجيل الدخول بواسطة جوجل"
        android:textColor="#FFFF" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:background="@color/scifitBlue"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/txtForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/emailTxt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="151dp"
        android:text="نسيت كلمة المرور؟"
        android:textColor="@color/scifitBlue" />

</RelativeLayout>