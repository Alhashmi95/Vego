<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    >


    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="13dp"
        android:background="@color/md_white_1000"
        app:layout_constraintBottom_toTopOf="@+id/spinnerUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:gravity="center"
            android:text="متابعة التقدم للعملاء"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaSpinner0"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_spinner_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/relaSpinner1">

        <Spinner
            android:id="@+id/selectUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:spinnerMode="dropdown" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/custom_edit_text_white">

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/grey"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tvPreviousWeight"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView21"
            android:layout_alignParentStart="true"
            android:layout_marginStart="103dp"
            android:background="@drawable/custom_table_text"
            android:gravity="center"
            android:text="72"
            android:textColor="@color/blackGrey"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="103dp" />

        <TextView
            android:id="@+id/tvCurrentWeight"
            android:layout_width="40dp"
            android:layout_height="wrap_content"

            android:layout_alignStart="@+id/tvPreviousWeight"
            android:layout_alignTop="@+id/imageView6"
            android:background="@drawable/custom_table_text"
            android:gravity="center"
            android:text="72"
            android:textColor="@color/blackGrey"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/tvPreviousWeight" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvPreviousWeight"
            android:layout_alignStart="@+id/textView24"
            android:text="كغ"
            android:textColor="@color/blackGrey"
            android:layout_alignLeft="@+id/textView24" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="79dp"
            android:text="كغ"
            android:textColor="@color/blackGrey"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="79dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="124dp"
            android:layout_marginTop="38dp"
            android:text="الوزن السابق"
            android:textColor="@color/blackGrey"
            android:layout_alignParentRight="true"
            android:layout_marginRight="124dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignStart="@+id/textView21"
            android:text="الوزن الحالي"
            android:textColor="@color/blackGrey"
            android:layout_alignLeft="@+id/textView21" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageView7"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/balance"
            android:layout_alignLeft="@+id/imageView7" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="65dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/balance"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/btnUpdateWeight"
        android:background="@drawable/custom_edit_text_white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="25dp"
        android:gravity="center"
        android:inputType="number"
        android:text="ادخل الوزن المثالي" />

    <Button
        android:id="@+id/etBrief"
        android:layout_marginHorizontal="25dp"
        android:background="@color/scifitBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/md_white_1000"
        android:text="تحديث الوزن المثالي" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="8dp"

        android:layout_marginHorizontal="25dp"

        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.0">


        <RadioButton
            android:id="@+id/radio_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="True"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/radio_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:text="False"
            android:textSize="18dp" />
    </RadioGroup>

</LinearLayout>
