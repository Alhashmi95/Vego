<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cardViewMeals"
        android:layout_height="210dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingLeft="10dp"
        app:cardMaxElevation="15dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/progressBar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="170dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/ic_Meal"
                android:layout_width="26dp"
                android:layout_height="27dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:paddingBottom="3dp"
                android:src="@drawable/icons_meal_px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp" />

            <ImageView
                android:id="@+id/calIC"
                android:layout_width="26dp"
                android:layout_height="27dp"
                android:layout_alignParentBottom="true"
                android:paddingBottom="3dp"
                android:src="@drawable/calories"
                android:layout_toLeftOf="@+id/textViewTitle"
                android:layout_toStartOf="@+id/textViewTitle" />

            <TextView
                android:id="@+id/textViewShortDesc"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:ellipsize="end"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:text="Card Title"
                android:layout_toLeftOf="@+id/calIC"
                android:layout_toStartOf="@+id/calIC" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="150dp"
                android:layout_height="29dp"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:text="Card Title"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/ic_Meal"
                android:layout_toStartOf="@+id/ic_Meal" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>