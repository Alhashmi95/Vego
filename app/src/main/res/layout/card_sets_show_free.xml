<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey">



    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" >

        <RelativeLayout
            android:id="@+id/relativeLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etReps"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="-111dp"
                android:layout_marginVertical="4dp"
                android:layout_toEndOf="@+id/txtWeight"
                android:background="@drawable/custom_table_text"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:layout_marginLeft="-111dp"
                android:layout_toRightOf="@+id/txtWeight" />


            <TextView
                android:id="@+id/txtSet"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center"
                android:inputType="number"
                android:text="1"
                android:textSize="18dp"
                android:layout_alignParentRight="true" />


            <TextView
                android:id="@+id/textViewVolume"
                android:layout_width="69dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="34dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/custom_table_text"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="34dp" />


            <TextView
                android:id="@+id/txtRM1"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="110dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/custom_table_text"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="110dp" />

            <EditText
                android:id="@+id/txtWeight"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="117dp"
                android:layout_marginVertical="4dp"
                android:background="@drawable/custom_table_text"
                android:ems="10"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="117dp" />
        </RelativeLayout>

            <Button
                android:id="@+id/btn_delet"
                android:layout_width="33dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="X" />
    </android.support.v7.widget.CardView>



</RelativeLayout>