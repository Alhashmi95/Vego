<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MealIngrActivity">


    // هذي اللي تسوي البار اللي فوق

    <android.support.v7.widget.Toolbar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:background="#002e65"

        android:paddingRight="0dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="9dp"
                android:src="@drawable/logo_white" />


            <ImageView
                android:id="@+id/profile"
                android:layout_width="39dp"
                android:layout_height="match_parent"

                android:layout_alignParentStart="true"


                android:layout_alignParentTop="true"
                android:onClick="openDrawer"
                android:paddingTop="2dp"
                android:src="@drawable/profile_on_top"
                tools:ignore="OnClick"
                android:layout_alignParentLeft="true" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarid"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/actionBar"
        android:background="#bebcbc"
        android:elevation="0dp"
        android:gravity="center"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.CardView
            android:layout_width="188dp"
            android:layout_height="106dp">

            <ImageView
                android:id="@+id/mealImg"
                android:layout_width="188dp"
                android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbarid"
        android:background="#333333"
        app:tabGravity="fill"
        app:tabIndicatorColor="#1d1d1d"
        app:tabMode="fixed"
        app:tabTextColor="@color/tabtextcolor"

        android:layout_alignParentLeft="true" />




    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_id"
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:layout_below="@+id/tablayout_id"></android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/saveMealBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="احفظ الوجبة" />

</RelativeLayout>
