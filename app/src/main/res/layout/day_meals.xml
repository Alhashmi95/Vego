<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ededed">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="15dp"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/calsCount"
                android:layout_width="29dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="113dp"
                app:srcCompat="@drawable/icons_meal_px" />

            <ImageView
                android:id="@+id/calsIcon"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="116dp"
                app:srcCompat="@drawable/calories" />

            <TextView
                android:id="@+id/txtCount"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-107dp"
                android:layout_toStartOf="@+id/calsCount"
                android:text="عدد الوجبات"
                android:textColor="#161616" />

            <TextView
                android:id="@+id/txtCals"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="149dp"
                android:text="السعرات"
                android:textColor="#161616" />

            <ImageView
                android:id="@+id/dayIcon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="25dp"
                app:srcCompat="@drawable/icons_calendar_px_"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/txtDay"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/dayIcon"
                android:text="يوم 1"
                android:textColor="#161616"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/dayIcon" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>