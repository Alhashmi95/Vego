<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingVertical="10dp"
android:paddingLeft="15dp"
android:paddingRight="60dp"
android:clipToPadding="false"
    android:layoutDirection="ltr">

<ImageView
    android:id="@+id/avatar"
    android:layout_marginTop="50dp"
    android:layout_alignParentLeft="true"
    android:scaleType="centerInside"
    android:background="@drawable/circle"
    android:layout_width="34dp"
    android:layout_height="34dp" />

<TextView
    android:id="@+id/text_message_name"
    android:layout_marginLeft="15dp"
    android:layout_toRightOf="@+id/avatar"
    android:layout_alignTop="@+id/avatar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:text="Rose"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/date_chat"
        android:elevation="2dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Sep 26, 2018"
        android:textColor="#fff"
        android:textSize="18dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/text_message_body"
    android:layout_below="@+id/text_message_name"
    android:layout_alignLeft="@+id/text_message_name"
    android:background="@drawable/their_message"
    android:layout_marginRight="15dp"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:elevation="2dp"
    android:textSize="18dp"
    android:text="How are you doing? This is a long message that should probably wrap."
    />

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_message_body"
        android:layout_marginLeft="-28dp"
        android:layout_toRightOf="@+id/text_message_body"
        android:text="11:40"
        android:textSize="10sp" />
</RelativeLayout>