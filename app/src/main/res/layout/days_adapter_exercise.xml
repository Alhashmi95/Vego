<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ededed">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/workoutCount"
                android:layout_width="19dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="93dp"
                app:srcCompat="@drawable/workoutcount"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="93dp" />

            <ImageView
                android:id="@+id/calsIcon"
                android:layout_width="19dp"
                android:layout_height="21dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="140dp"
                app:srcCompat="@drawable/mouscle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="140dp" />

            <TextView
                android:id="@+id/txtCount"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="عدد التمارين"
                android:textColor="@android:color/black"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/txtCals"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="صدر"
                tools:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/dayIcon"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="-68dp"
                android:layout_toEndOf="@+id/txtDay"
                app:srcCompat="@drawable/icons_calendar_px_"
                android:layout_marginLeft="-68dp"
                android:layout_toRightOf="@+id/txtDay" />

            <TextView
                android:id="@+id/txtDay"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="68dp"
                android:text="يوم 1"
                android:textColor="@android:color/black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="68dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>